<ul>
  {{#each @fields as |Field|}}
    <li>
      <div class="uk-grid-small uk-child-width-1-5" uk-grid>
        <CaFieldSelect
          @options={{@availableFields}}
          @onSelect={{fn
            this.updateFieldPath
            Field.id
            Field.alias
            Field.dataSource
          }}
          @path={{Field.dataSource}}
        />
      </div>
      <CaFieldDetails @field={{Field}} @onUpdate={{@updateFieldDescription}} />
      <button
        data-test-delete-field
        type="button"
        class="uk-icon-button"
        uk-icon="trash"
        title={{t "caluma.analytics.delete"}}
        {{on "click" (fn this.removeField Field.id)}}
      ></button>
      <hr />
    </li>
  {{/each}}
</ul>