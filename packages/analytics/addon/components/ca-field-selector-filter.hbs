{{! template-lint-disable no-bare-strings }}
<div
  class="uk-flex uk-flex-middle uk-border uk-width-expand uk-flex-wrap-reverse"
  ...attributes
  data-test-selector-filter
>
  <div>
    {{#each this.filters as |filter|}}
      <span class="uk-label uk-margin-small-right">
        {{filter}}
        <button {{on "click" (fn this.removeFilter filter)}} type="button">
          <span uk-icon="icon: close; ratio:0.5;"></span>
        </button>
      </span>
    {{/each}}
  </div>

  <form
    class="uk-flex uk-height-match uk-margin-small-bottom"
    {{on "submit" this.addFilter}}
  >
    <Input
      class="uk-input uk-width-2-3 uk-margin-small-right"
      autocomplete="off"
      name="tag"
      placeholder={{t "caluma.analytics.filter_placeholder"}}
      @value={{this.newFilterValue}}
      aria-label="filter expression"
    />
    <UkButton
      class="uk-button-default uk-button-small uk-width-1-3"
      @type="submit"
      @label={{t "caluma.analytics.add_filter"}}
    />
  </form>
</div>