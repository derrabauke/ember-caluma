<div ...attributes>
  <ValidatedForm @model={{changeset @field this.Validations}} as |f|>
    <div class="uk-flex">
      <div class="uk-margin-right">
        <f.input
          @name="alias"
          @label={{t "caluma.analytics.alias"}}
          @on-update={{fn this.update "alias"}}
        />
      </div>
      <div class="uk-margin-right">
        <f.input
          @name="alias_translation"
          @label={{t "caluma.analytics.alias_translation"}}
          @on-update={{fn this.update "alias_translation"}}
        />
      </div>
    </div>
    <div class="uk-flex">
      <div class="uk-margin-right">
        <f.input
          @name="show"
          @label={{t "caluma.analytics.show_output"}}
          @renderComponent={{component "ca-toggle-switch" size="small"}}
          @on-update={{fn this.update "show"}}
        />
      </div>
      <CaFieldSelectorFilter @onUpdate={{fn this.update "filter"}} />
    </div>
  </ValidatedForm>
</div>