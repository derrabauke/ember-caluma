<div class="uk-grid-small uk-child-width-1-3" uk-grid>
  <label
    class="uk-width-auto uk-margin-right uk-text-middle uk-margin-small-top"
  >
    <Input
      class="uk-checkbox uk-margin-small-right"
      name="show-in-output"
      @type="checkbox"
      @checked={{@field.show}}
      {{on "change" this.toggleShowOutput}}
    />
    {{t "caluma.analytics.show_output"}}
  </label>

  <Input
    class="uk-input uk-width-auto"
    id="alias"
    name="alias"
    placeholder={{t "caluma.analytics.alias"}}
    @type="text"
    @value={{@field.alias}}
    {{on "change" this.updateAlias}}
  />

  <CaFieldSelectorFilter @onUpdate={{@onUpdate}} />
</div>